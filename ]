// Package pubsub handles internal/external messaging
package pubsub

import (
	"fmt"
	"log"
	"os"

	"github.com/joho/godotenv"
	amqp "github.com/rabbitmq/amqp091-go"
)

var (
	conn *amqp.Connection
	ch   *amqp.Channel
)

func Init() error {
	if err := godotenv.Load(); err != nil {
		return fmt.Errorf("cannot load .env file: %v", err)
	}

	rabbitConnString := os.Getenv("RABBITMQ_URL")
	if rabbitConnString == "" {
		rabbitConnString = "amqp://guest:guest@localhost:5672/"
		log.Printf("RABBITMQ_URL not set, using default: %s", rabbitConnString)
	}

	fmt.Printf("Rabbitmq connection string: %s\n", rabbitConnString)

	var err error

	conn, err = amqp.Dial(rabbitConnString)
	if err != nil {
		fmt.Println("connection failed")
		return err
	}

	ch, err = conn.Channel()
	if err != nil {
		fmt.Println("cannot open channel")
		return err
	}

	_, err = ch.QueueDeclare(
		"booking_events",
		true,
		false,
		false,
		false,
		nil,
	)

	return err
}

func Close() {
	if ch != nil {
		ch.Close()
	}

	if conn != nil {
		conn.Close()
	}
}
